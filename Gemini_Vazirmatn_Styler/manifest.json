{
  "manifest_version": 3,
  "name": "Vazirmatn for Gemini",
  "version": "1.0",
  "description": "تغییر فونت Google Gemini به Vazirmatn",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "اعمال فونت Vazirmatn"
  }
}