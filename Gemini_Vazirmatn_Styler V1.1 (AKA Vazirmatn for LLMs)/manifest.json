{
  "manifest_version": 3,
  "name": "Vazirmatn for LLMs",
  "version": "1.1",
  "description": "تغییر فونت LLMs به Vazirmatn",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://chat.deepseek.com/*",
    "https://chat.qwen.ai/*",
    "https://chatgpt.com/*",
    "https://kimi.com/*",
    "https://chat.mistral.ai//*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "اعمال فونت Vazirmatn"
  }
}
